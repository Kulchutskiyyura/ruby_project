<p>
    <strong>Comment:</strong>
    <%= comment.body %>
    
  </p>
  <p>
    <strong>Commentator:</strong>
    <%= comment.user_email %>
    
  </p>
  
  <% if current_user && comment.user_email==current_user.email %>
  
  <%= link_to 'Delete', [comment.post, comment],id: "delete",method: :delete, data: { confirm: 'Are you sure?' }  %>
  <% end %>
  